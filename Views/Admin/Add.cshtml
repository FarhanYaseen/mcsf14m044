@using laptopDeals.Models;
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<body>
    <div class="container;center_div center_div center_content">

        <form id="Form" role="form" method="post" action="/Admin/AddProduct" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Product Name:</label>
                <input type="text" class="form-control" name="name" required>
            </div>

            <div class="form-group">
                <label for="price">Price:</label>
                <input type="text" class="form-control" name="price" required>
            </div>

            <div class="form-group">
                <label for="category" display:inline-block>Category:</label>
            </div>
            <br />
            <select name="category" display:inline-block>

                @foreach (var x in Model)
                {
                    <option value="@x.name">@x.name</option>
                }
            </select>

    </div>

    <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" class="form-control" name="description" required>
    </div>

    <div class="form-group">
        <label class="contact"><strong>Image:</strong></label>
        <input type="file"  name="image" required />

    </div>

    <input type="submit" class="btn btn-default" value="Add" />

    </form>
   
</body>




