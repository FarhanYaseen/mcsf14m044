@using laptopDeals.Models;
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<body>
    <form id="editForm" role="form" method="post" action="/Admin/Save/@Model.Id">
        <div class="form-group">
            <label for="username"> Username:</label>
            <input type="text" class="form-control" name="username" value="@Model.username">
        </div>

        <div class="form-group">
            <label for="password">Passsword:</label>
            <input type="text" class="form-control" name="password" value="@Model.password">
        </div>

        <div class="form-group">
            <label for="email_address">Email Address:</label>
            <input type="text" class="form-control" name="email_address" value="@Model.email_address">
        </div>


        <div class="form-group">
            <label for="phone_no">Phone no:</label>
            <input type="text" class="form-control" name="phone_no" value="@Model.phone_no">
        </div>

        <input type="submit" class="btn btn-default" value="Update" />
    </form>
    </div>


    <style>
        #editForm {
            margin-top: 70px;
            margin-left: 150px;
            margin-bottom: 150px;
        }

            #editForm input {
                width: 350px;
                margin-top: 10px;
                margin-left: 15px;
            }

            #editForm label {
                font-size: 16px;
                margin-top: 20px;
            }

            #editForm .btn-default {
                width: 120px;
                margin-top: 30px;
            }
    </style>

</body>
