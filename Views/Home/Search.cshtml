@using laptopDeals.Models;
@{
    ViewBag.Title = "Search";
    }

<center><h2 style="background-color:black; font-family:Arial;color:palegreen; margin-top:20px">Your Searched Product</h2></center>
<div class="details_big_box">
    @foreach (var x in Model)
    {

        <div style="display:inline-block">
            <a href="/Home/Details/?id=@x.pid"><img src="@Url.Content("~/images/image_P_" +x.pid+ ".jpg")" style="margin-left:120px;margin-top:100px; width:100px;height:100px" /></a>
            <h4 style="margin-left: 100px; font-family: Calibri; color: black">@x.name</h4>
            <h4 style="margin-left: 150px; font-family: Calibri; color: black">@x.price Rs.</h4>
            <a href="/Home/Deatils/?id=@x.pid"> <input type="button" value="Shop Now" style="width: 110px; height: 35px; margin-left: 120px; font-size: 14px; color:black; background-color: gray; border-radius: 10px"></a>
        </div>

    }
</div>