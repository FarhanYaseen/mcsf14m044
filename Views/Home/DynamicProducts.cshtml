@using laptopDeals.Models;
@{
    ViewBag.Title = "DynamicProducts";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<center><h2 style="color:black">Products</h2></center>
<div>
    @foreach (var a in Model)
    {

        <div style="display:inline-block">
            <img src="@Url.Content("~/images/image_P_"+a.pid+ ".jpg")" style="margin-left:120px;margin-top:100px; width:100px;height:100px" />
            <h4 style="margin-left: 100px; color: black">@a.name</h4>
            <h4 style="margin-left: 150px;color: black">@a.price Rs.</h4>
            <a href="/Home/Details/?id=@a.pid"> <input type="button" value="Buy now" style="width: 110px; height: 40px; margin-left: 120px; font-size: 16px;  border-radius: 5px"></a>
        </div>

    }
</div>