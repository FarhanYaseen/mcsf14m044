@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>


<body style="background-image:url('/images/bg.jpg')">

    <div style="width:300px;height:310px;align-content:center; margin-left:35%; margin-top:10%">
        <form method="get" action="/Home/Authentication">

            <center>
                <h1 style="font-family:Algerian; color:wheat ">Login</h1>
                <br>
                <span>
                    <label style="color: wheat"><b>Enter name</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input type="text" name="name" id="name" />
                </span>
                <br />
                <br>
                <span>
                    <label style="color: wheat"><b>Enter password</b>&nbsp;</label>
                    <input type="text" name="pass" id="id" />
                </span>
                <br />

                <br>
                <button>Login</button>
                <br />

            </center>
        </form>
    </div>
    <div style="background-color :white;width:400px; height:300px; margin-left:60%;margin-top:-20%">
        <img src="~/images/img.jpg" style="width:100%; height:100%" />
    </div>
</body>
</html>